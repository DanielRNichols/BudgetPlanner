<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Budget Planner</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="">
                        <span class="oi oi-person" aria-hidden="true"></span> @context.User.Identity.Name
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView Roles="Administrator">
            <li class="nav-item px-3">
                <NavLink class="nav-link" @onclick="()=>expandAdminMenu = !expandAdminMenu">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Admin
                </NavLink>
                @if (expandAdminMenu)
                {
                    <ul class="nav flex-column">
                        <li class="nav-item px-3">
                            <NavLink class="nav-link" href="">
                                <span class="oi oi-list-rich" aria-hidden="true"></span>Reset Passwords
                            </NavLink>
                        </li>
                    </ul>
                }
            </li>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="budgetgroups">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Budget Groups
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="budgetcategories">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Budget Categories
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="budgetitems">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Budget Items
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="budgetcycles">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Budget Cycles
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="budgetcycleitems">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Budget Cycle Items
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="memorizedtransactions">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Memorized Trans.
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="registers">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Registers
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="registerentries">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Register Entries
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="logout">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Logout
                    </NavLink>
                </li>
            </Authorized>
            <NotAuthorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Register
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Login
                    </NavLink>
                </li>
            </NotAuthorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private bool expandAdminMenu = false;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
