@page "/registers"

<h3 class="card-title">Registers</h3>
<hr />

@if (Registers == null)
{
    <LoadingMessage Message="Loading..." />
}
else
{
    <div class="form-group">
        <label for="register">Register</label>
        <EditForm Model="Registers">
            <InputSelect ValueExpression="@(() => SelectedId)"
                         ValueChanged="@((string value) => OnRegisterSelected(value))"
                         class="form-control" id="register">
                @foreach (var item in Registers)
                {
                    <option @key="item.Id" value="@item.Id">@item.Name</option>
                }
            </InputSelect>
        </EditForm>
    </div>

    @if (SelectedRegister != null)
    {
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Starting Balance</th>
                    <th>Cleared Balance</th>
                    <th>Available Balance</th>
                    <th>Ending Balance</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@SelectedRegister.StartingBalance</td>
                    <td>@SelectedRegister.ClearedBalance</td>
                    <td>@SelectedRegister.AvailableBalance</td>
                    <td>@SelectedRegister.EndingBalance</td>
                </tr>
            </tbody>
        </table>

        @if (Entries != null)
        {
            <RegisterEntryList Entries="Entries" HideColumns="HideColumns"></RegisterEntryList>
        }
     }

 }

