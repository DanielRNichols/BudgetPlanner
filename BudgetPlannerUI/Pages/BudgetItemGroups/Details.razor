@page "/budgetitemgroups/details/{id}"

<h3>Budget Item Group Details</h3>

@if (Model == null)
{
    <LoadingMessage Message="Loading..." />
}
else
{
    <table class="table table-responsive">
        <tbody>
            <tr>
                <td>Id</td>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>Type</td>
                <td>@Model.BudgetItemType?.Name</td>
            </tr>
        </tbody>
    </table>

    <a href="/budgetitemgroups/" class="btn btn-outline-secondary">Back</a>
}
