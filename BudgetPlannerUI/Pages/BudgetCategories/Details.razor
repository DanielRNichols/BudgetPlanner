@page "/budgetcategories/details/{id}"

<h3>Budget Category Details</h3>

@if (Model == null)
{
    <LoadingMessage Message="Loading..." />
}
else
{
    <table class="table table-responsive">
        <tbody>
            <tr>
                <td>Id</td>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <td>Group</td>
                <td>@Model.BudgetGroup?.Name</td>
            </tr>
        </tbody>
    </table>

    <a href="/budgetcategories/" class="btn btn-outline-secondary">Back</a>
}
